import unittest

# Пример функции регистрации
def register_user(email, password):
    if '@' not in email or len(password) < 6:
        raise ValueError("Invalid email or password")
    return True

class TestRegistrationCode(unittest.TestCase):
    def test_valid_registration(self):
        self.assertTrue(register_user("valid@example.com", "password123"))

    def test_invalid_email(self):
        with self.assertRaises(ValueError):
            register_user("invalid-email", "password123")

    def test_short_password(self):
        with self.assertRaises(ValueError):
            register_user("valid@example.com", "123")

if __name__ == "__main__":
    unittest.main()
