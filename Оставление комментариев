pip install selenium
from selenium import webdriver
import unittest

class TestCommenting(unittest.TestCase):
    def setUp(self):
        self.driver = webdriver.Chrome(executable_path="path_to_chromedriver")
    
    def test_comment(self):
        driver = self.driver
        driver.get("https://rutube.ru/video/example_video")

        # Оставляем комментарий
        comment_box = driver.find_element_by_id("comment-box")
        comment_box.send_keys("This is a test comment.")

        submit_button = driver.find_element_by_id("submit-comment")
        submit_button.click()

        # Проверяем, что комментарий появился
        comment_success = driver.find_element_by_xpath("//div[@class='comment-text']")
        self.assertTrue(comment_success.is_displayed())

    def tearDown(self):
        self.driver.quit()

if __name__ == "__main__":
    unittest.main()
