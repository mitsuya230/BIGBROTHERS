pip install selenium
from selenium import webdriver
import unittest

class TestPlaylistCreation(unittest.TestCase):
    def setUp(self):
        self.driver = webdriver.Chrome(executable_path="path_to_chromedriver")
    
    def test_create_playlist(self):
        driver = self.driver
        driver.get("https://rutube.ru/")

        # Переходим в раздел плейлистов
        playlist_button = driver.find_element_by_xpath("//a[text()='Плейлисты']")
        playlist_button.click()

        # Создаем новый плейлист
        create_button = driver.find_element_by_xpath("//button[text()='Создать плейлист']")
        create_button.click()

        playlist_name_input = driver.find_element_by_id("playlist-name")
        playlist_name_input.send_keys("Test Playlist")

        submit_button = driver.find_element_by_id("create-button")
        submit_button.click()

        # Проверяем создание плейлиста
        playlist_success_message = driver.find_element_by_xpath("//div[@class='playlist-created']")
        self.assertTrue(playlist_success_message.is_displayed())

    def tearDown(self):
        self.driver.quit()

if __name__ == "__main__":
    unittest.main()
